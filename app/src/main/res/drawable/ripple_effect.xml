<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#F60596"> <!-- Ripple color -->

    <!-- Default background color when not pressed -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F60596"/> <!-- Button color when not pressed -->
            <corners android:radius="8dp"/> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- Ripple mask -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#F60596"/>
        </shape>
    </item>
</ripple>
